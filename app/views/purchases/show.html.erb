<div id="content" class="container">
    <header id="content-header">
        <div id="price-container">
        </div>
      <%= image_tag('header-wolf.jpg', id:"content-head-img", alt: "Weirdwolf!") %>
  </header>
  <section id="content-receipt" class="clearfix">
      <div id="receipt-container">
        <div class="dotmatrix left"></div>
        <div id="receipt-content">
          <h4 id="receipt-title">Thank You!</h4>
          <p><strong>WEIRDWOLF ONLINE PURCHASE RECEIPT</strong></p>
          <div id="receipt-details" class="row clearfix">
            <div class="col-sm-8 receipt-left">
              <p><strong class="font-weight-heavy"><%= @product.title %></strong><br/> <span class="font-weight-light"><%= @product.subtitle %></span></p>
            </div>
            <div class="col-sm-4">
              $<%= @product.price %>
            </div>
          </div>

          <footer id="receipt-footer">
            <small>Email us your size at weirdwolfdesigns@gmail.com</small>
          </footer>
        </div>
        <div class="dotmatrix right"></div>
      </div>
      <div id="receipt-shadow"></div>
    </section>
</div>
